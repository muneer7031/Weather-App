<!-- viewdata.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Data</title>
</head>
<body>
    <h1>Country Data</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Capital</th>
                <th>Memberships</th>
                <th>Total GDP</th>
                <th>Inflation</th>
                <th>Unemployment</th>
                <th>Government</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.capital}}</td>
                <td>{{this.memberships}}</td>
                <td>{{this.gdp_total}}</td>
                <td>{{this.inflation}}</td>
                <td>{{this.unemployment}}</td>
                <td>{{this.government}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>
